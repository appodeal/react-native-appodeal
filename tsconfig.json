{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "lib": [ "es2017" ],
    "skipLibCheck": true,
    "importHelpers": true,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "ios",
    "android",
    "example"
  ]
}